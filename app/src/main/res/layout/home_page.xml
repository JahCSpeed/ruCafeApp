<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="201dp"
        android:layout_height="57dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="104dp"
        android:text="RU- CAFE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/donutButton"
        android:layout_width="143dp"
        android:layout_height="106dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="37dp"
        android:text="Order Donuts"
        app:layout_constraintEnd_toStartOf="@+id/coffeeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/ordersButton"
        android:layout_width="143dp"
        android:layout_height="106dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="74dp"
        android:text="Cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donutButton" />

    <Button
        android:id="@+id/storeordersButton"
        android:layout_width="143dp"
        android:layout_height="106dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="72dp"
        android:text="Store Orders"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donutButton" />

    <Button
        android:id="@+id/coffeeButton"
        android:layout_width="143dp"
        android:layout_height="106dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="44dp"
        android:text="Order Coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/donutButton"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>